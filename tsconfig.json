{
  "compilerOptions": {
    "outDir": "./dist-js/",
    "noImplicitAny": true,
    "module": "CommonJS", 
    "importHelpers": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "removeComments": false,
    "noUnusedLocals": false,
    "target": "ES6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "ES2017",
      "dom"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
