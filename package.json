{
  "name": "ts-app",
  "version": "1.0.0",
  "scripts": {
    "build": "webpack --mode production",
    "start": "webpack-dev-server --mode development --hot",
    "build-api": "browserify ./dist-js/lib/api.js --standalone pol > ./dist-js/lib/pol.bundle.js",
    "build-api-min": "browserify ./dist-js/lib/api.js --standalone pol | uglifyjs -c > ./dist-js/lib/pol.bundle.min.js",
    "compile": "tsc -p ./tsconfig.json"
  },
  "devDependencies": {
    "html-webpack-plugin": "^4.5.0",
    "ts-loader": "^5.0.0",
    "typescript": "^3.0.0",
    "webpack": "^4.0.0",
    "webpack-cli": "^3.0.0",
    "webpack-dev-server": "^3.1.14"
  }
}
